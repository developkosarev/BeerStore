<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeerStore</title>
    <base href="~/" />

    <link href="~/css/app.css" rel=preload as=style>
    <link href="~/css/chunk-vendors.css" rel=preload as=style>

    <link href="~/js/app.js" rel=preload as=script>
    <link href="~/js/chunk-vendors.js" rel=preload as=script>

    <link rel="stylesheet" href="~/css/chunk-vendors.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />

</head>
<body>
    @RenderBody()

    <script src="~/js/chunk-vendors.js" asp-append-version="true"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
